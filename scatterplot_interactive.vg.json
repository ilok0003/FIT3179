{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Malaria Cases per Country in 2022",
    "data": {
      "url": "Malaria.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "Region_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Eastern Mediterranean",
            "Africa",
            "Americas",
            "Europe",
            "South-East Asia",
            "Western Pacific"
          ],
          "labels": [
            "Show All",
            "Eastern Mediterranean",
            "Africa",
            "Americas",
            "Europe",
            "South-East Asia",
            "Western Pacific"
          ],
          "name": "Region Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Total_cases > 0"},
      {"filter": "datum.Deaths > 0"},
      {"filter": "datum.Population > Population_Above"},
      {
        "filter": "Region_selection == null || datum.Region == Region_selection"
      },
      {
        "calculate": "datum.Total_cases/datum.Population * 10000",
        "as": "Cases per 10,000 Population"
      }
    ],
    "encoding": {
      "x": {
        "field": "Total_cases",
        "type": "quantitative",
        "title": "Total Cases",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [1, 100000000]}
      },
      "y": {
        "field": "Deaths",
        "type": "quantitative",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 1000000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Region",
            "type": "nominal",
            "scale": {
              "domain": [
                "Eastern Mediterranean",
                "Africa",
                "Americas",
                "Europe",
                "South-East Asia",
                "Western Pacific" 
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Total_cases", "type": "quantitative", "title": "Total Cases"},
            {"field": "Deaths", "type": "quantitative"},
            {
              "field": "Cases per 10,000 Population",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Nigeria' || datum['Country'] == 'India' || datum['Country'] == 'Zimbabwe' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Total_cases", "type": "quantitative", "title": "Total Cases"},
            {"field": "Deaths", "type": "quantitative"},
            {
              "field": "Cases per 10,000 Population",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      }
    ]
  }